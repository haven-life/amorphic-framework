    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "persistor_debugs",
            "port": 5858,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/components/persistor/test/persist_newapi_tests.js",
            "remoteRoot": "/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha ${workspaceFolder}/components/persistor/test/persist_newapi_tests.js",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "envFile": "${workspaceFolder}/test.local.env",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "persistor",
            "port": 5858,
            "console": "integratedTerminal",
            "address": "localhost",
            "localRoot": "${workspaceFolder}/components/persistor/",
            "remoteRoot": "/app"
        }
    ]
}