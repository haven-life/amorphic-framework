{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "persistor_debugs",
            "port": 5858,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/components/persistor/test/persist_newapi_tests.js",
            "remoteRoot": "/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--ui",
                "bdd",
                "--require",
                "source-map-support/register",
                "--recursive",
                "${workspaceFolder}/components/persistor/test/persist_newapi_tests.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "trace": "sm"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "persistor",
            "port": 5858,
            "console": "integratedTerminal",
            "address": "localhost",
            "localRoot": "${workspaceFolder}/components/persistor/",
            "remoteRoot": "/app"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "persistor_debug1",
            "port": 5858,
            "localRoot": "${workspaceFolder}/components/persistor/",
            "remoteRoot": "/app"
        }
    ]
}