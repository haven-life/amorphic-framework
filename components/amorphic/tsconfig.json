{
  "files": [
    "./lib/AmorphicServer.ts",
    "./lib/amorphicEntry.ts",
    "./lib/router.ts",
    "./lib/RedisSetup.ts"
  ],
  "include": [
    "./lib/routes/*.ts",
    "./lib/types/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015.promise",
      "es7",
      "ESNext"
