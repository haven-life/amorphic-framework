    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "sourceMap": true,
    "typeRoots": [
      "./lib/types/custom.d.ts",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
