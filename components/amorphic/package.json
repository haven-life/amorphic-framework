{
	"name": "@haventech/amorphic",
	"description": "Front to back isomorphic framework for developing applications with node.js and mongoDB",
	"homepage": "https://github.com/haven-life/amorphic",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"default": "./dist/esm/index.js"
		}
	},
	"types": "dist/cjs/index.d.ts",
	"version": "14.0.0",
	"dependencies": {
		"@haventech/persistor": "^13.0.0",
		"@haventech/semotus": "^10.0.0",
		"@haventech/supertype": "^9.0.0",
		"amorphic-bindster": "2.0.*",
		"compression": "1.7.4",
		"cookie-parser": "1.4.6",
		"express": "4.18.2",
		"express-session": "1.17.3",
		"formidable": "1.1.1",
		"mongodb": "^3.5.5",
		"nconf": "^0.12.0",
		"uglify-es": "^3.3.9",
		"uglify-js": "3.17.4",
		"validator": "13.7.0"
	},
	"devDependencies": {
		"@babel/cli": "7.21.5",
		"@babel/core": "7.21.8",
		"@babel/plugin-syntax-import-assertions": "7.20.0",
		"@babel/plugin-transform-modules-commonjs": "7.21.5",
		"@babel/preset-env": "7.21.5",
		"@babel/preset-typescript": "7.21.5",
		"@types/chai": "4.3.4",
		"@types/compression": "1.7.2",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "4.17.16",
		"@types/express-serve-static-core": "4.17.33",
		"@types/mocha": "10.0.1",
		"@types/node": "18.11.18",
		"axios": "^1.3.0",
		"babel-plugin-transform-import-meta": "2.2.0",
		"bluebird": "3.7.2",
		"chai": "4.3.7",
		"es6-promise": "4.2.8",
		"eslint": "8.33.0",
		"mocha": "10.2.0",
		"mock-fs": "5.2.0",
		"nyc": "^15.1.0",
		"request": "2.88.2",
		"sinon": "15.0.1",
		"ts-node": "10.9.1",
		"ttypescript": "1.5.15",
		"typescript": "4.9.5",
		"underscore": "^1.13.6",
		"xmlhttprequest-cookie": "0.9.9"
	},
	"peerDependencies": {
		"knex": ">=0.21.0 <3.0.0",
		"pg": ">=8.7.0 <9.0.0"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"clean:tests": "find ./typescript_tests -type f \\( -name '*.js' -o -name '*.js.map' \\) -delete && find ./typescript_tests_esm -type f \\( -name '*.js' -o -name '*.js.map' \\) -delete",
		"setup": "npm install",
		"build": "npm run clean && npm run recreateDist && npm run copy && npm run compile",
		"compile": "npx babel --extensions .ts,.js src -d dist/cjs && ttsc -p ./tsconfig.esm.json && node ./prepare-package.mjs",
		"compile:amorphic:tests": "tsc -p ./typescript_tests/tsconfig.test.cjs.json && ttsc -p ./typescript_tests_esm/tsconfig.test.esm.json",
		"copy": "npm run copy:cjs && npm run copy:esm",
		"copy:cjs": "rsync -a --exclude 'resolve/*' --include '*/' --include '*.d.ts' --include 'remoteable.ts' --exclude '*' src/ dist/cjs/ && cp src/lib/resolve/resolveVersionsCjs.js dist/cjs/lib/resolve/resolveVersions.js",
		"copy:esm": "rsync -a --exclude 'resolve/*' --include '*/' --include '*.js' --include '*.d.ts' --include 'remoteable.ts' --exclude '*' src/ dist/esm/ && cp src/lib/resolve/resolveVersionsEsm.js dist/esm/lib/resolve/resolveVersions.js",
		"lint": "eslint .",
		"prepublishOnly": "npm run build",
		"recreateDist": "rm -rf ./dist/ && mkdir ./dist/ && mkdir ./dist/cjs/ && mkdir ./dist/esm/",
		"test": "mocha --timeout 10000 test/* --reporter-options maxDiffSize=20000 --exit",
		"test:esm": "mocha --timeout 10000 --config test_esm/.mocharc.json --package test_esm/package.json test_esm/* --reporter-options maxDiffSize=20000 --exit",
		"test:docker": "docker-compose up --build",
		"test:docker:debug": "docker-compose -f docker-compose-debug.yml up --build",
		"test:trace": "nyc npm run test",
		"test:debug": "mocha test/* --inspect-brk=0.0.0.0:9229",
		"test:daemon": "mocha test/daemon/*",
		"test:daemon_auto": "mocha test/daemon_auto/*",
		"test:postgres": "mocha test/postgres",
		"test:standalone": "mocha test/standalone",
		"test:V2": "mocha test/V2",
		"test-d": "nyc npm run test:daemon",
		"test-da": "nyc npm run test:daemon_auto",
		"test:ts:register": "mocha -r ts-node/register --project typescript_tests/tsconfig.test.cjs.json typescript_tests/unittest.ts --exit",
        "test:ts:register:esm": "TS_NODE_PROJECT='./typescript_tests_esm/tsconfig.test.esm.json' node --loader ts-node/esm.mjs ./node_modules/mocha/bin/mocha --extension ts --package typescript_tests_esm/package.json typescript_tests_esm/unittest.ts --exit",
		"test:ts": "npm run compile:amorphic:tests && npm run test:compiled:js && npm run test:compiled:js:esm",
		"test:compiled:js": "mocha ./typescript_tests/unittest.js --exit",
		"test:compiled:js:esm": "mocha --config typescript_tests_esm/.mocharc.json --package typescript_tests_esm/package.json ./typescript_tests_esm/unittest.js --exit",
		"test:ts:debug": "mocha ./typescript_tests/unittest.js --inspect-brk=0.0.0.0:9229"
	},
	"directories": {},
	"engines": {
		"node": ">=16.x"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/haven-life/amorphic.git"
	},
	"bugs": {
		"url": "http://github.com/haven-life/amorphic/issues"
	}
}
