{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "noImplicitAny": false,
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
		"plugins": [
			{ "transform": "../../../../build/transformers/reflectMetadataResolver.ts", "after": true }
		]
    }
}