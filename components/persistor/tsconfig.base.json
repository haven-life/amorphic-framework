{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "es2020",
    "lib": ["es2015", "es2017", "es2020"],
    "noImplicitAny": false,
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/@types"
