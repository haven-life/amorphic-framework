{
    "compilerOptions": {
        "moduleResolution": "node16",
        "target": "es2020",
        "lib": ["es2015", "es2017", "dom", "es2020"],
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./",
        "typeRoots": [
            "./node_modules/@types"
          ],
          "declaration": true,
          "declarationDir": "dist",
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "inlineSources": true,
          "inlineSourceMap": true,
          "useDefineForClassFields": false,
          "esModuleInterop": true
    },
    "extends": "./tsconfig.base.json",
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "./test/**/*.ts",
        "./index.d.ts",
        "./**/persistable.ts",
        "./dist/**"
    ]
}