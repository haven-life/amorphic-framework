{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["dom", "es2020"],
        "noImplicitAny": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true        
    },
    "exclude": [
        "./typescript",
        "./test/typescript",
        "./test/typescriptEsm",
        "./dist/**/*",
        "./transformers"
    ]
}